<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">Personal Information</div>
    <div class="panel-body" style="padding: 2em">
      <div class="form-group">
        <label for="fullName" class="help">Full Name: </label>
        <div class="input-group input-group-sm col-xs-4">
          <input type="text" name="fullName" class="form-control" id="fullName" value="<%= user.fullName %>" readonly />
        </div>
      </div>
      <div class="form-group">
        <label for="email" class="help">Email Address: </label>
        <div class="input-group input-group-sm col-xs-4">
          <input type="email" name="email" class="form-control" id="email" value="<%= user.email %>" readonly />
        </div>
      </div>
      <div class="form-group">
        <label for="nationalID" class="help">NationalID: </label>
        <div class="input-group input-group-sm col-xs-2">
          <input type="text" name="nationalID" class="form-control" id="nationalID" value="<%= user.nationalID %>" readonly />
        </div>
      </div>
      <div class="form-group">
        <label for="position" class="help">Position: </label>
        <div class="input-group input-group-sm col-xs-2">
          <input type="text" name="position" class="form-control" id="position" value="<%= user.position %>" readonly />
        </div>
      </div>
      <div class="form-group">
        <label for="department" class="help">Department: </label>
        <div class="input-group input-group-sm col-xs-2">
          <input type="text" name="department" class="form-control" id="department" value="<%= user.department %>" readonly />
        </div>
      </div>
      <div class="form-group">
        <div class="input-group input-group-sm">
          <a class="btn btn-warning" href="/user/edit/<%= user.id %>"> Edit </a>
        </div>
      </div>
    </div>
  </div>
</div>
