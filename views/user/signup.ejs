<div class="container">
  <form action="/user/signup" method="POST" class="form-horizontal">

    <div class="panel panel-default">
      <div class="panel-heading">Personal Information</div>
      <div class="panel-body" style="padding: 2em">
        <div class="form-group">
          <label for="fullName" class="help">Full Name: </label>
          <div class="input-group input-group-sm col-xs-4">
            <input type="text" name="fullName" class="form-control" id="fullName" placeholder="Enter full name" required />
            <span class="input-group-addon" id="sizing-addon3">*</span>
          </div>
        </div>
        <div class="form-group">
          <label for="email" class="help">Email Address: </label>
          <div class="input-group input-group-sm col-xs-4">
            <input type="email" name="email" class="form-control" id="email" placeholder="Enter Email Address" required />
            <span class="input-group-addon">*</span>
          </div>
        </div>
        <div class="form-group">
          <label for="password" class="help">Password: </label>
          <div class="input-group input-group-sm col-xs-4">
            <input type="password" name="password" class="form-control" id="passowrd" placeholder="Your Password" />
            <span class="input-group-addon">*</span>
          </div>
        </div>
        <div class="form-group">
          <label for="nationalID" class="help">NationalID: </label>
          <div class="input-group input-group-sm col-xs-2">
            <input type="text" name="nationalID" class="form-control" id="nationalID" placeholder="Your National ID" required />
            <span class="input-group-addon" id="sizing-addon3">*</span>
          </div>
        </div>
        <div class="form-group">
          <label for="position" class="help">Position: </label>
          <div class="input-group input-group-sm col-xs-2">
            <select name="position" class="form-control" id="position">
              <option value=""> -- SELECT -- </option>
              <option value="1"> Supervisor </option>
              <option value="2"> Student Affairs </option>
              <option value="3"> Monitoring </option>
              <option value="4"> Director </option>
            </select>
            <span class="input-group-addon">*</span>
          </div>
        </div>

        <div class="form-group">
          <label for="department" class="help">Department: </label>
          <div class="input-group input-group-sm col-xs-2">
            <select name="department" class="form-control" id="department">
              <option value=""> -- SELECT -- </option>
              <option value="uk"> United Kingdom </option>
              <option value="au"> Australia </option>
              <option value="ca"> Canada </option>
              <option value="us"> United States </option>
              <option value="tr"> Turkey </option>
              <option value="ma"> Malaysia </option>
              <option value="ee"> Eastren Europe </option>
              <option value="we"> Westren Europe </option>
            </select>
            <span class="input-group-addon">*</span>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group input-group-sm">
            <input type="submit" class="btn btn-success" value="Create Account"></input>
            <input type="hidden" name="_csrf" value="<%= _csrf %>"></input>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
