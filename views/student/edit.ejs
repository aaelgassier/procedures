<div class="container">
  <div class="row text-center pad-top ">
    <div class="col-md-12">
      <h2><strong>Editing Exist Student Data</strong></h2>
    </div>
  </div>
  <div class="row  pad-top">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
        <hr />
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>   Student Information </strong>
        </div>
        <div class="panel-body">
          <form action="/student/update/<%= student.id %>" method="POST" name="editStudentForm" role="form">
            <div class="form-group input-group">
              <input type="text" name="studentName" class="form-control" id="studentName" value="<%= student.studentName %>" required />
              <span class="input-group-addon">*</span>
            </div>
            <div class="form-group input-group">
              <input type="text" name="studentNationalID" class="form-control" id="studentNationalID" value="<%= student.studentNationalID %>" required />
              <span class="input-group-addon">*</span>
            </div>
            <div>
            <div class="form-group input-group">
              <select name="studyCountry" class="form-control" id="studyCountry" ng-model="studyCountry" required>
                <option value="">-Country-</option>
                <option value="United States"> United States </option>
                <option value="Canada"> Canada </option>
                <option value="United Kingdom"> United Kingdom </option>
                <option value="Malaysia"> Malasiya </option>
                <option value="Turkey"> Turkey </option>
                <option value="Malta"> Malta </option>
                <option value="Australia"> Australia </option>
                <option value="New Zealand"> New Zealand </option>
                <option value="India"> India </option>
              </select>
              <span class="input-group-addon">*</span>
              <select name="studyCountryGroup" class="form-control" id="studyCountryGroup" ng-model="studyCountryGroup" required>
                <option value="">-Group-</option>
                <option value="UI"> United Kingdom </option>
                <option value="AU"> Australia </option>
                <option value="CU"> Canada-United States </option>
                <option value="TM"> Turkey-Malta </option>
                <option value="EA"> Eastren Asia </option>
                <option value="EE"> Eastren Europe </option>
                <option value="WE"> Westren Europe </option>
              </select>
              <span class="input-group-addon">*</span>
            </div>
            <div class="input-group">
              <input type="submit" class="btn btn-success" value="Edit Account"></input>
              <input type="hidden" name="_csrf" value="<%= _csrf %>"></input>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
